<header class="main_menu home_menu" id="main-menu">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a href="/" class="navbar-brand">
                        <img src="/img/logos.png" alt="">
                        <span> PILLOW-MART</span>
                    </a>
                    <button class="navbar-toggler" id="hamburger" data-toggle="collapse"
                        data-target="#navbarSupportedContent">
                        <span class="menu_icon">
                            <i id="bars-mobile" class="fas fa-bars"></i>
                        </span>
                    </button>

                    <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a href="/" class="nav-link">Home</a>
                            </li>

                            <li class="nav-item">
                                <a href="/about" class="nav-link">About</a>
                            </li>

                            <li class="nav-item">
                                <a href="/list" class="nav-link">Products</a>
                            </li>

                            <li class="nav-item">
                                <a href="/blog" class="nav-link">Blogs</a>
                            </li>


                            <li class="nav-item">
                                <a href="/contact" class="nav-link">Contact</a>
                            </li>

                            <% if (!user) { %>

                            <li class="nav-item">
                                <a href="/accounts/register" class="nav-link d-lg-none d-block"><i
                                        class="fas fa-user"></i> Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a href="/accounts/login" class="nav-link d-lg-none d-block">
                                    <i class="fas fa-sign-in-alt"></i> Login</a>
                            </li>
                            <% } %>

                        </ul>
                    </div>
                    <div class="hearer_icon d-flex align-items-center">

                        <% if (user) { %>

                        <% const firstName = user.name.charAt(0) %>

                        <div class="menu">
                            <div class="dropdown">
                                <button class="btn btn-default button-menu dropdown-toggle" type="button"
                                    data-toggle="dropdown"><%= firstName %></button>

                                <ul class="dropdown-menu">

                                    <div class="menu_name"><%= user.name %></div>

                                    <li class="p-4">
                                        <a href="/cart" class="icons_cart">
                                            <i class="fas fa-shopping-cart"></i>
                                            <% if(typeof cart !== "undefined"){ %>
                                            <span class="icons_cart_n">
                                                <%= cart.length %>
                                            </span>
                                            <% }else{ %>
                                            <span class="icons_cart_n">
                                                0
                                            </span>
                                            <% } %>
                                        </a>
                                    </li>
                                    <% if (user && user.admin === 1) { %>
                                    <a href="/cf5480873fae9cf6c5c9" class="menu_pannel">Pannel</a>
                                    <% } %>

                                    <hr>
                                    <div class="">
                                        <%- include("./form")  %>
                                    </div>

                                </ul>
                            </div>
                        </div>
                    </div>

                    <% } else {%>
                    <a href="/accounts/register" class="d-lg-block d-none"><i class="fas fa-user"></i> Sign Up</a>
                    <a href="/accounts/login" class="d-lg-block d-none"><i class="fas fa-sign-in-alt"></i>Login</a>


                    <a href="/cart" class="icons_mobile">
                        <i class="fas fa-shopping-cart"></i>
                        <% if(typeof cart !== "undefined"){ %>
                        <span class="icons_mobile_n">
                            <%= cart.length %>
                        </span>
                        <% }else{ %>
                        <span class="icons_mobile_n">
                            0
                        </span>
                        <% } %>
                    </a>

                    <% } %>
            </div>
            </nav>
        </div>
    </div>
    </div>
</header>