<!-- Product List Start -->
<div class="single_product_list">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <% firstThreeProducts.forEach(e => { %>
                <div class="single_product_inner">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_img">
                                <img src="<%= e.img_url %>" alt="<%= e.slug %>" class="img imgScale">
                                <img src="/img/product_overlay.png" alt="" class="img-fluid dn product_overlay">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_content">
                                <h5>Started from $<%= e.price %></h5>
                                <h2>
                                    <a href="/">
                                        <%= e.title %>
                                    </a>
                                </h2>
                                <a href="/list" class="btn_3">
                                    Explore Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>

            </div>
        </div>
    </div>
</div>


