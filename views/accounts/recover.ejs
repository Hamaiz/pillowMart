<%- include("../partials/breadcrumb") %>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="recover">
                <div class="recover_desc text-center">
                    Hey! please enter your email address.
                </div>
                <hr>
                <form action="/accounts/recover" method="post">
